Texture2D g_txSource;

//--------------------------------------------------------------------------------------
// Pixel shader
//--------------------------------------------------------------------------------------
min16float4 main(float4 Pos : SV_POSITION) : SV_TARGET
{
	min16float4 result = min16float4(g_txSource[Pos.xy]);
	result.xyz /= result.xyz + 1.0;

	return min16float4(result.xyz * 1.25, result.w);
}
